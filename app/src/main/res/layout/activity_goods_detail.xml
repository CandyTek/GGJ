<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <RelativeLayout android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50">
        <TextView
            android:id="@+id/tv_meal"
            android:text="欢乐套餐"
            android:textSize="@dimen/x18"
            android:textColor="#000"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:text="(共12件)"
            android:textSize="@dimen/x16"
            android:id="@+id/tv_num"
            android:clickable="true"
            android:layout_marginLeft="@dimen/x5"
            android:layout_toRightOf="@id/tv_meal"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:id="@+id/title_line"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/x1"
        android:background="#ecedef" />

    <com.huiyi.ruyishe.view.MyListView
        android:background="@color/white"
        android:id="@+id/lv_product"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:listitem="@layout/activity_goods_detail_item">
    </com.huiyi.ruyishe.view.MyListView>
</LinearLayout>