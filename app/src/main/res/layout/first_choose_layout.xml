<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_marginTop="@dimen/x30"
        android:layout_marginLeft="@dimen/x30"
        android:background="@drawable/icon_close2"
        android:layout_width="@dimen/x30"
        android:layout_height="@dimen/x30" />

    <ImageView
        android:layout_marginTop="@dimen/x30"
        android:layout_marginLeft="@dimen/x30"
        android:background="#5DDF7B"
        android:layout_width="@dimen/x40"
        android:layout_height="@dimen/x15" />

    <TextView
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/x20"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginLeft="@dimen/x30"
        android:text="欢迎使用油客来自助终端"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="@dimen/x13"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginLeft="@dimen/x30"
        android:text="请选择你所在的油站"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/x19"
        android:id="@+id/tv_choose"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginLeft="@dimen/x30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginTop="@dimen/x3"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginLeft="@dimen/x30"
        android:background="#B3F2C7"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_marginBottom="@dimen/x20"
        android:layout_marginTop="@dimen/x10"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginLeft="@dimen/x30"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_marginBottom="@dimen/x20"
        android:layout_gravity="center"
        android:background="@drawable/home_button_bg"
        android:text="确认油站"
        android:layout_width="@dimen/x100"
        android:layout_height="@dimen/x35" />

</LinearLayout>