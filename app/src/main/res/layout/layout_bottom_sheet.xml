<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#eeeeee"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <com.ruoyu.pigroad.myapplication.Widget.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <RelativeLayout android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50">
        <TextView android:text="购物车"
            android:textSize="@dimen/x18"
            android:textColor="#000"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView android:text="清空"
            android:textSize="@dimen/x18"
            android:id="@+id/clear"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:id="@+id/title_line"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/x1"
        android:background="#ecedef" />

    <com.ruoyu.pigroad.myapplication.Widget.MyListView
        android:id="@+id/lv_product"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:listitem="@layout/product_item">
    </com.ruoyu.pigroad.myapplication.Widget.MyListView>

    </LinearLayout>


    </com.ruoyu.pigroad.myapplication.Widget.MyScrollView>


</LinearLayout>