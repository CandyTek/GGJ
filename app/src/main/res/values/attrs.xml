<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="card">
        <attr name="itemMarginTop" format="dimension" />
        <attr name="bottomMarginTop" format="dimension" />
        <attr name="yOffsetStep" format="dimension" />
        <attr name="widthHeightRate" format="float" />

    </declare-styleable>
    <declare-styleable name="TCircleProgressView">
        <!-- 圆弧宽度 -->
        <attr name="tcpv_border_width" format="dimension"/>
        <!-- 圆弧开始角度 -->
        <attr name="tcpv_start_angle" format="integer"/>
        <!-- 圆弧空白角度 -->
        <attr name="tcpv_blank_angle" format="integer"/>
        <!-- 动画持续时间 单位秒 -->
        <attr name="tcpv_animation_duration" format="integer"/>
        <!-- 总进度 -->
        <attr name="tcpv_total_progress" format="integer"/>
        <!-- 背景色 -->
        <attr name="tcpv_background_color" format="color"/>
        <!-- 圆弧背景色 -->
        <attr name="tcpv_arc_background_color" format="color"/>

        <!-- 进度圆弧开始色 -->
        <attr name="tcpv_arc_start_color" format="color"/>
        <!-- 进度圆弧结束色 -->
        <attr name="tcpv_arc_end_color" format="color"/>

        <!-- 半圆背景色 -->
        <attr name="tcpv_hint_background_color" format="color"/>
        <!-- 字体颜色 -->
        <attr name="tcpv_hint_text_color" format="color"/>
        <!-- 字体大小 -->
        <attr name="tcpv_hint_text_size" format="dimension"/>
        <!-- 文字偏移量 -->
        <attr name="tcpv_hint_text_padding" format="dimension"/>
        <!-- 文字 -->
        <attr name="tcpv_hint_text" format="string"/>
        <!-- 是否显示半圆 -->
        <attr name="tcpv_hint_show" format="boolean"/>
        <!-- 半圆覆盖比率 0.1 - 1 -->
        <attr name="tcpv_hint_semicircle_rate" format="float"/>

    </declare-styleable>
    <declare-styleable name="CustomStatusView">
        <attr name="progress_color" format="color" />
        <attr name="progress_width" format="dimension" />
        <attr name="progress_radius" format="dimension" />
        <attr name="load_success_color" format="color" />
        <attr name="load_failure_color" format="color" />
    </declare-styleable>

    <declare-styleable name="WaterWaveProgress">
        <attr name="progressWidth" format="dimension" />
        <attr name="fontSize" format="dimension" />
        <attr name="progressColor" format="color" />
        <attr name="progressBgColor" format="color" />
        <attr name="waterWaveColor" format="color" />
        <attr name="waterWaveBgColor" format="color" />
        <attr name="progress2WaterWidth" format="dimension" />
        <attr name="showProgress" format="boolean" />
        <attr name="showNumerical" format="boolean" />
        <attr name="textColor" format="color" />
        <attr name="progress" format="integer" />
        <attr name="maxProgress" format="integer" />
    </declare-styleable>
</resources>
